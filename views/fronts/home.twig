{% extends 'layouts/master.twig' %}

{% block content %}
	<div class="container-image">
		<img src="assets/images/maxresdefault.jpg" alt="un ouvrier a la tache">
	</div>

	<div class="second-bg"></div>

	<div class="absolute-container">
