{% extends 'layouts/admin_master.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <form action="/admin/news/update" method="post" class="container" enctype="multipart/form-data">
                    <div class="form-group row">
                        <label for="title" class="col-3 col-form-label">Titre</label>
                        <input type="text" id="title" name="title"  class="form-control col-9" value="{{data.title}}">
                    </div>

                    <div class="form-group row">
                        <label for="exerpt" class="col-3 col-form-label">Résumé</label>
                        <input type="text" id="exerpt" name="exerpt"  class="form-control col-9" value="{{data.exerpt}}">
                    </div>

                    <div class="form-group row">
                        <label for="content" class="col-3 col-form-label">Contenu</label>
                        <textarea id="content" name="content" class="form-control col-9">{{data.content}}</textarea>
                    </div>

                    <div class="form-group row">
                        <div class="col-3">
                            <label for="img" class="col-form-label">Image</label>
                        </div>
                        <div class="col-9">
                            <div class="row">
                                <div class="col-12">
                                    <img src="{{data.img}}" alt="">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">
                                    <input type="file" name="img" id="img" accept=".jpg, .png, .pdf" class="form-control-file">
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <input type="text" value="{{data.id}}" id="id" name="id" style="display:none;">
            
                   <div class="form-group row">
                        <input type="submit" class="btn btn-primary">
                    </div>
                </form>
                {% for alert in app.session.flashbag.get('errors') %}
                    <p>{{alert}}</p>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}