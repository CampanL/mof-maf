{% extends 'layouts/admin_master.twig' %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <form action="/admin/news/create" method="post" class="container" enctype="multipart/form-data">
                    <div class="form-group row">
                        <label for="title" class="col-3 col-form-label">Titre</label>
                        <input type="text" id="title" name="title"  class="form-control col-9">
                    </div>

                    <div class="form-group row">
                        <label for="exerpt" class="col-3 col-form-label">Résumé</label>
                        <input type="text" id="exerpt" name="exerpt"  class="form-control col-9">
                    </div>

                    <div class="form-group row">
                        <label for="content" class="col-3 col-form-label">Contenu</label>
                        <textarea id="content" name="content" class="form-control col-9"></textarea>
                    </div>

                    <div class="form-group row">
                        <label for="img" class="col-3 col-form-label">Image</label>
                        <input type="file" name="img" id="img" accept=".jpg, .png, .pdf" class="form-control-file">
                    </div>


                   <div class="form-group row">
                        <input type="submit" class="btn btn-primary">
                    </div>
                </form>
                {% for alert in app.session.flashbag.get('errors') %}
                    <p>{{alert}}</p>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}