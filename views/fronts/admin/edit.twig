{% extends 'layouts/admin_master.twig' %}

{% block content %}
    <form action="/admin/administrateurs/update" method="post">
    	<input type="text" id="mail" name="mail" placeholder="mail" value="{{data.mail}}">
    	<input type="password" id="password" name="password" placeholder="mdp" value="{{data.password}}">
    	<input type="text" id="id" name="id" style="display:none" value="{{data.id}}">
    	<input type="submit" value="Modifier">
    </form>
    {% for alert in app.session.flashbag.get('errors') %}
        <p>{{alert}}</p>
    {% endfor %}
{% endblock %}